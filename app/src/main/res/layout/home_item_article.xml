<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:elevation="8dp"
        app:cardCornerRadius="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="2dp"
        android:id="@+id/home_item_article_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/home_item_article_header"
            android:layout_margin="8dp"
            android:layout_width="30dp"
            android:layout_height="30dp" />


        <TextView
            android:id="@+id/home_item_article_author"
            android:textSize="16sp"
            android:layout_toRightOf="@id/home_item_article_header"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="8dp"
            android:text="@string/app_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/home_item_article_time"
            android:textSize="16sp"
            android:text="@string/app_name"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_alignTop="@id/home_item_article_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/home_item_article_title"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:text="@string/app_name"
            android:layout_alignLeft="@id/home_item_article_header"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_below="@id/home_item_article_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/home_item_article_tag"
            android:textSize="18sp"
            android:textColor="@color/blue"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_below="@id/home_item_article_title"
            android:layout_alignLeft="@id/home_item_article_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/home_item_article_like"
            android:layout_alignTop="@id/home_item_article_tag"
            android:layout_alignRight="@id/home_item_article_time"
            android:src="@drawable/love"
            android:clickable="true"
            android:layout_marginBottom="10dp"
            android:layout_width="32dp"
            android:layout_height="32dp" />
    </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>